<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seproject.neagaze.macalerts">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".ForgotPwdActivity"
            android:label="@string/title_activity_forgot_pwd"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateProfileActivity"
            android:label="@string/title_activity_create_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomepageActivity"
            android:label="@string/title_activity_homepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewResultsActivity"
            android:label="@string/title_activity_viewresults"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterTeamActivity"
            android:label="@string/title_activity_register_team"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seproject.neagaze.macalerts.HomepageActivity" />
        </activity>
        <activity
            android:name=".AppointManagerActivity"
            android:label="@string/title_activity_appoint_manager"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seproject.neagaze.macalerts.HomepageActivity" />
        </activity>
        <activity
            android:name=".CreateSprtEvtActivity"
            android:label="@string/title_activity_create_sprt_evt"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seproject.neagaze.macalerts.HomepageActivity" />
        </activity>
        <activity
            android:name=".DeleteSprtEvtActivity"
            android:label="@string/title_activity_delete_sprt_evt"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seproject.neagaze.macalerts.HomepageActivity" />
        </activity>
        <activity
            android:name=".AddVenueActivity"
            android:label="@string/title_activity_add_venue"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seproject.neagaze.macalerts.HomepageActivity" />
        </activity>
        <activity
            android:name=".DeleteVeneuActivity"
            android:label="@string/title_activity_delete_veneu"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seproject.neagaze.macalerts.HomepageActivity" />
        </activity>
        <activity
            android:name=".ViewTeamActivity"
            android:label="@string/title_activity_view_team"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seproject.neagaze.macalerts.HomepageActivity" />
        </activity>

        <activity android:name=".CreateMatchActivity"
            android:label="@string/title_activity_create_match"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seproject.neagaze.macalerts.HomepageActivity" />
        </activity>
    </application>

</manifest>