<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_team"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="Team"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_team"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Sport"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <!--  Member 1 -->
        <LinearLayout
            android:id="@+id/ll_member1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_below="@id/tv_sport">
            <TextView
                android:id="@+id/tv_member1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="Member 2"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/bt_remove_member1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/cross"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <!--  Member 2 -->
        <LinearLayout
            android:id="@+id/ll_member2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_below="@id/ll_member1">
            <TextView
                android:id="@+id/tv_member2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="Member 2"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/bt_remove_member2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/cross"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <!--  Member 3 -->
        <LinearLayout
            android:id="@+id/ll_member3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_below="@id/ll_member2">
            <TextView
                android:id="@+id/tv_member3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="Member 3"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/bt_remove_member3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/cross"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <!--  Member 4 -->
        <LinearLayout
            android:id="@+id/ll_member4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_below="@id/ll_member3">
            <TextView
                android:id="@+id/tv_member4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="Member 4"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/bt_remove_member4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/cross"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <!--  Member 5 -->
        <LinearLayout
            android:id="@+id/ll_member5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll_member4">
            <TextView
                android:id="@+id/tv_member5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="Member 5"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/bt_remove_member5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/cross"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>


        <!--  Layout for approving team and adding Team members -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll_member5">
            <Button
                android:id="@+id/bt_approve_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textSize="8dp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/bt_add_team_member"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/plus"
                android:layout_marginLeft="10dp"
                android:visibility="visible"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>